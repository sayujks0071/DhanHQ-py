# DhanHQ API Credentials
DHAN_CLIENT_ID=your_client_id_here
DHAN_ACCESS_TOKEN=your_access_token_here

# Trading Mode Configuration
ENABLE_LIVE=false
ENABLE_OPTIONS=true
DISABLE_EQUITY=true

# Universe Configuration
UNIVERSE_MAX=150

# Risk Management
RISK_MAX_DAILY_DD=0.02
RISK_PER_TRADE=0.005
MAX_CONCURRENT_POS=8

# Transaction Costs
SLIPPAGE_FUT_BPS=3
SLIPPAGE_OPT_ABS=0.35
TXN_COST_FUT_BPS=4
TXN_COST_OPT_ABS=40

# Margin and Risk Controls
MARGIN_BUFFER_PCT=0.15
HEDGE_MIN_DELTA_ABS=0.20
IV_SMOOTHING=0.5

# Notification (Optional)
NOTIFY_TELEGRAM_BOT_TOKEN=
NOTIFY_TELEGRAM_CHAT_ID=

# Dashboard Configuration
DASHBOARD_PORT=8787
DASHBOARD_HOST=localhost

# Database Configuration
DATABASE_URL=sqlite:///data/trading.db
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Market Hours (IST)
MARKET_OPEN=09:15
MARKET_CLOSE=15:30
PRE_OPEN_START=09:00

# Strategy Configuration
DEFAULT_STRATEGY_TIMEFRAME=5m
MAX_STRATEGY_PARALLEL=5

# Backtesting Configuration
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
WALK_FORWARD_WINDOW=252
WALK_FORWARD_STEP=63

# Options Configuration
OPTIONS_EXPIRY_DAYS=7
OPTIONS_STRIKE_STEPS=5
OPTIONS_MIN_OI=1000
OPTIONS_MIN_VOLUME=500

# Event Blackout Dates (comma-separated)
EVENT_BLACKOUT_DATES=2024-02-01,2024-03-01,2024-04-01

# Kill Switch Configuration
KILL_SWITCH_ENABLED=true
KILL_SWITCH_DAILY_LOSS_PCT=0.05
KILL_SWITCH_MAX_POSITIONS=10
